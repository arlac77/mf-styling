{
  "name": "mf-styling",
  "version": "0.0.0-semantic-release",
  "files": [
    "src/button.css",
    "src/card.css",
    "src/color-primary-cyan.css",
    "src/color-primary-fuchsia.css",
    "src/color-primary-inigo.css",
    "src/color-primary-lime.css",
    "src/color-primary-rose.css",
    "src/color-primary-teal.css",
    "src/color.css",
    "src/dropdown.css",
    "src/form.css",
    "src/global.css",
    "src/layout.css",
    "src/log.css",
    "src/nav.css",
    "src/table.css"
  ],
  "description": "css as used for mf apps",
  "keywords": [
    "vite",
    "web"
  ],
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "lint:css": "stylelint src/*.css",
    "lint": "npm run lint:css",
    "dev": "vite",
    "pkg": "vite build;npm-pkgbuild --verbose -Dversion=0.0.3",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^8.3.18",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.6.1",
    "stylelint-config-standard": "^25.0.0",
    "vite": "^2.9.5"
  },
  "optionalDependencies": {
    "mf-hosting": "github:arlac77/mf-hosting"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/mf-styling.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-styling/issues"
  },
  "homepage": "https://github.com/arlac77/mf-styling#readme",
  "pkg": {
    "content": {
      "${install.dir}": {
        "base": "build"
      },
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "groups": "web",
    "http.base.path": "/services/${name}",
    "depends": {
      "nginx-mainline": ">=1.21.4"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-css",
      "arlac77/template-pacman",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  }
}
