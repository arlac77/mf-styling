{
  "name": "mf-styling",
  "version": "0.0.0-semantic-release",
  "files": [
    "src/button.css",
    "src/card.css",
    "src/color-primary-cyan.css",
    "src/color-primary-fuchsia.css",
    "src/color-primary-inigo.css",
    "src/color-primary-lime.css",
    "src/color-primary-rose.css",
    "src/color-primary-teal.css",
    "src/color.css",
    "src/dropdown.css",
    "src/form.css",
    "src/global.css",
    "src/images/down.svg",
    "src/images/sort-ascending.svg",
    "src/images/sort-descending.svg",
    "src/images/sort-none.svg",
    "src/layout.css",
    "src/log.css",
    "src/nav.css",
    "src/tab.css",
    "src/table-sort.css",
    "src/table.css"
  ],
  "description": "css as used for mf apps",
  "keywords": [
    "design system",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --page-request-timeout 3000 --app-init-delay 3000 --app \"vite preview\"",
    "lint:css": "stylelint ./src/*.css",
    "lint": "npm run lint:css",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^10.15.10",
    "semantic-release": "^19.0.5",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "testcafe": "^2.0.1",
    "vite": "^3.2.1"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.7.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/mf-styling.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-styling/issues"
  },
  "homepage": "https://github.com/arlac77/mf-styling#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": [
        {
          "base": "build"
        }
      ],
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "groups": "examples"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --verbose"
        }
      ]
    ]
  },
  "template": {
    "properties": {
      "web-app": {
        "publish": "build"
      }
    },
    "inheritFrom": [
      "arlac77/template-css",
      "arlac77/template-pacman",
      "arlac77/template-testcafe",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  }
}
