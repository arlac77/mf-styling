{
  "name": "mf-styling",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/button.css",
    "src/card.css",
    "src/color-primary-cyan.css",
    "src/color-primary-fuchsia.css",
    "src/color-primary-inigo.css",
    "src/color-primary-lime.css",
    "src/color-primary-rose.css",
    "src/color-primary-teal.css",
    "src/color.css",
    "src/dropdown.css",
    "src/form.css",
    "src/global.css",
    "src/layout.css",
    "src/log.css",
    "src/nav.css",
    "src/main-nav.css",
    "src/tab.css",
    "src/table-sort.css",
    "src/table.css",
    "src/pagination.css",
    "src/images/down.svg",
    "src/images/sort-ascending.svg",
    "src/images/sort-descending.svg",
    "src/images/sort-none.svg"
  ],
  "description": "css as used for mf apps",
  "keywords": [
    "design system",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*-cafe.mjs --esm -s build/test --page-request-timeout 5000 --app-init-delay 8000 --app vite",
    "lint:css": "stylelint ./src/*.css",
    "lint": "npm run lint:css",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^11.0.3",
    "npm-pkgbuild": "^11.8.9",
    "semantic-release": "^21.0.5",
    "stylelint": "^15.9.0",
    "stylelint-config-standard": "^33.0.0",
    "testcafe": "^3.0.0",
    "vite": "^4.3.9"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^1.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/mf-styling"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-styling/issues"
  },
  "homepage": "https://github.com/arlac77/mf-styling#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "example": true,
    "frontend": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-css",
      "arlac77/template-pacman",
      "arlac77/template-testcafe",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  }
}
