{
  "name": "mf-styling",
  "version": "0.0.0-semantic-release",
  "files": [
    "button.css",
    "card.css",
    "color-primary-cyan.css",
    "color-primary-fuchsia.css",
    "color-primary-inigo.css",
    "color-primary-lime.css",
    "color-primary-rose.css",
    "color-primary-teal.css",
    "color.css",
    "dropdown.css",
    "form.css",
    "global.css",
    "layout.css",
    "log.css",
    "nav.css",
    "table.css"
  ],
  "description": "css as used for mf apps",
  "keywords": [
    "vite",
    "web"
  ],
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "lint:css": "stylelint *.css",
    "lint": "npm run lint:css",
    "dev": "vite",
    "pkg": "npm-pkgbuild --verbose -Dversion=0.0.1",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^7.25.10",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.5.0",
    "stylelint-config-standard": "^25.0.0",
    "vite": "^2.8.3"
  },
  "optionalDependencies": {
    "mf-hosting": "github:arlac77/mf-hosting"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/mf-styling.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-styling/issues"
  },
  "homepage": "https://github.com/arlac77/mf-styling#readme",
  "config": {
    "base": "/services/mf-styling"
  },
  "pkg": {
    "content": {
      "${installdir}/": {
        "base": "build",
        "pattern": [
          "*.css",
          "*.html"
        ]
      },
      "/etc/nginx/sites/common/${name}.conf": "pkg/nginx.conf"
    },
    "output": {
      "arch": {}
    },
    "hooks": "pkg/hooks.sh",
    "groups": "web",
    "abstract": true,
    "csp.endpoint": "/services/csp/upload",
    "depends": {
      "nginx-mainline": ">=1.21.4"
    },
    "installdir": "/services/${name}",
    "nginx.sites.dir": "/etc/nginx/sites/common"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-css",
      "arlac77/template-pacman",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  }
}
