{
  "name": "mf-styling",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/button.css",
    "src/card.css",
    "src/color-primary-cyan.css",
    "src/color-primary-fuchsia.css",
    "src/color-primary-inigo.css",
    "src/color-primary-lime.css",
    "src/color-primary-rose.css",
    "src/color-primary-teal.css",
    "src/color.css",
    "src/dialog.css",
    "src/dropdown.css",
    "src/form.css",
    "src/global.css",
    "src/images/down.svg",
    "src/images/sort-ascending.svg",
    "src/images/sort-descending.svg",
    "src/images/sort-none.svg",
    "src/layout.css",
    "src/log.css",
    "src/main-nav.css",
    "src/nav.css",
    "src/pagination.css",
    "src/tab.css",
    "src/table-sort.css",
    "src/table.css"
  ],
  "packageManager": "npm@11.10.0+sha512.8bc844e37892200305b98562f13c6c10849d10b3387c8cdaeb4d1a2e32746a79063cba9dd284cf28c26a01c3bf4169b7d3b31b4a5586cc970d6749463108073c",
  "description": "css as used for mf apps",
  "keywords": [
    "design system",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "node --run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "test": "node --run test:playwright",
    "test:playwright": "npx playwright test",
    "lint:css": "stylelint ./src**/*.css",
    "lint": "node --run lint:css",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "npm-pkgbuild": "^20.6.1",
    "playwright": "^1.58.2",
    "semantic-release": "^25.0.3",
    "stylelint": "^17.2.0",
    "stylelint-config-standard": "^40.0.0",
    "vite": "^7.3.1",
    "vite-plugin-compression2": "^2.4.0"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/mf-styling.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/mf-styling/issues"
  },
  "homepage": "https://github.com/arlac77/mf-styling#readme",
  "pkgbuild": {
    "content": {
      "${install_dir}": {
        "dir": "build/"
      }
    },
    "example": true,
    "frontend": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-css",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-playwright",
      "arlac77/template-vite",
      "arlac77/template-web-app"
    ]
  },
  "browserslist": [
    "last 1 version"
  ]
}
